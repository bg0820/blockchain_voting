{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"airbnb",
		"prettier",
		"prettier/react"
	],
	"parser": "babel-eslint",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"react/jsx-filename-extension": [1, {
			"extensions": [".js", ".jsx"]
		}],
		"indent": [1, "tab"],
		"no-tabs": 0,
		"import/no-unresolved": "off",
		"no-underscore-dangle": [2, {
			"allow": [
				"__REDUX_DEVTOOLS_EXTENSION__"
			]
		}]
	}
}